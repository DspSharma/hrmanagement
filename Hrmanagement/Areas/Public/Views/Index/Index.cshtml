@{
    Layout = "~/Areas/Public/Views/Shared/Layout/_LayoutPublic.cshtml";
}
@using Hrmanagement.Core.DTO.DtoOutput;
@{
    var totalAttendance = ViewData["attendancedata"] as AttendanceOutput;
}

 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <style>
    .row.content {height: 550px}
    .sidenav {
      background-color: #f1f1f1;
      height: 100%;
    }
    .textColor{
        color:white;
    }
  </style>

<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-12">
            <div class="row">
                <div class="col-sm-4">
                    <div class="well" style="background-color:green">
                        <h4 class="textColor">Total Attendances</h4>
                        <p class="textColor">@totalAttendance?.totalAttendances</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="well" style="background-color:#8fbc8f">
                        <h4 class="textColor">Total Remaining Days</h4>
                        <p class="textColor">@totalAttendance?.totalShortdays</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="well" style="background-color:#e78e86">
                        <h4 class="textColor">Total Leave</h4>
                        <p class="textColor">@totalAttendance?.totalLeave</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@{
    Layout = "~/Areas/Admin/Views/Shared/Layout/_LayoutAdmin.cshtml";
}

@using Hrmanagement.Core.DTO.DtoOutput;
@{
    var projectId = ViewData["project"] as ProjectOutput;
    int id = projectId != null ? projectId.Id : 0;

    var projectStatus = new[]
    {
        "completed","suspended","onhold","inprogress"
    };
}



<section class="content container-fluid">
    <div class="card">
        <div class="card-header">
            @if (id != 0)
            {
                <h3 class="card-title">Project Page-Update</h3>
            }
            else
            {
                <h3 class="card-title">Create New Project</h3>
            }
        </div>
        <form class="card-body" method="post" action="~/Admin/Project/AddUpdateProject" onsubmit="return addUpdateProject()">
            <input type="hidden" name="Id" value="@projectId?.Id">
            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="firstName" class="col-form-label col-sm-2">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" name="Title" placeholder="Title" value="@projectId?.Title">
                    </div>
                </div>
                <div class="col-sm-6">
                    <label for="lastName" class="col-form-label col-sm-2">Description</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="description" name="Description" rows="2" cols="20">@projectId?.Description</textarea>
                        @*<input type="text" class="form-control" id="description" name="Description" placeholder="Description" value="@projectId?.Description">*@
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="email" class="col-form-label col-sm-2">Url</label>
                    <div class="col-sm-10">
                        <input type="url" class="form-control" id="url" name="Url" placeholder="Url" value="@projectId?.Url">
                    </div>
                </div>

                <div class="col-sm-6">
                    <label for="email" class="col-form-label col-sm-2">Status</label>
                    <div class="col-sm-10">

                        <select id="status" name="Status" style="width: 100%" required>
                            <option value="">Select Status</option>
                            @foreach (var roleList in projectStatus)
                            {
                                <option value="@roleList" @(projectId?.Status == roleList ? "selected" : "")>@roleList</option>

                            }
                        </select>

                        @*<input type="text" class="form-control" id="status" name="Status" placeholder="Status" value="@projectId?.Status">*@
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-info float-left">Save</button>
            </div>
        </form>
    </div>
</section>
@await Component.InvokeAsync("Toaster")
@{
    Layout = "~/Areas/Admin/Views/Shared/Layout/_LayoutAdmin.cshtml";
}
@using Hrmanagement.Core.DTO.DtoOutput;
@{
    var apiCredentialData = ViewData["apiCredentialData"] as List<ApiCredentialsOutput>;
}
@if (apiCredentialData != null)
{
    <section class="content-header">
        <div>
            <h1>
                List of ApiCredential
                <a class="btn btn-primary" href="~/Admin/ApiCredentials/AddUpdateApiCredentialForm" style="float:right;"> Add ApiCredential</a>
            </h1>
        </div>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="About" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Project Name</th>
                                        <th>Description</th>
                                        <th>ApiKey</th>
                                        <th>ClientId</th>
                                        <th>ClientSecret</th>
                                        <th>AllowLimit</th>
                                        <th>ConsumedLimit</th>
                                        <th>Status</th>
                                        <th>CreatedAt</th>
                                        <th>UpdatedAt </th>
                                        <th>Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in apiCredentialData)
                                    {
                                        <tr>
                                            <td>@data.Id</td>
                                            <td>@data.ProjectName</td>
                                            <td>@data.Description</td>
                                            <td>@data.ApiKey</td>
                                            <td>@data.ClientId</td>
                                            <td>@data.ClientSecret</td>
                                            <td>@data.AllowLimit</td>
                                            <td>@data.ConsumedLimit</td>
                                            <td>@data.Status</td>
                                            <td>@data.CreatedAt</td>
                                            <td>@data.UpdatedAt</td>
                                            <td>
                                                <a class="btn btn-primary" href="~/Admin/ApiCredentials/AddUpdateApiCredentialForm/@data.Id">Edit/View</a>
                                                <a class="btn btn-danger" href="~/Admin/ApiCredentials/deleteByIdApiCredential/@data.Id"><i class="fa fa-trash"> </i> Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<script>
    function updateHolidayStatus(Id) {
        window.location.href = "/../../Admin/Holiday/ActiveInActive/" + Id
    }
</script>
@await Component.InvokeAsync("Toaster")
